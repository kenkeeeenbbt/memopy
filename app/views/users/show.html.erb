<% provide(:title, @user.name) %>
<div class="friends-wrapper">
  <aside id="page-title">
    <h1>Memopyへようこそ</h1>
    <h2>今度会うとき、何話す？</h2>
  </aside>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <% if @user == current_user %>
          <h1>
            <%= @user.name %>
          </h1>
          <a>
            <%= @user.email %>
          <a>
          <div>
            <%= link_to '編集', edit_user_path %>
          </div>
          <%= link_to '削除', @user, method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } %>
        <% else %>
          <a>表示できません。</a>
        <% end %>
      </section>
    </aside>
  </div>
</div>