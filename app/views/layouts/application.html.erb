<!DOCTYPE html>
<html>
  <head>
    <title>Memopy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="jquery.min.js" type="text/javascript"></script>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
  </head>
  <body>
    <div class="wrapper">
      <!-- ヘッダー開始 -->
      <header>
        <div class="icon">Memopy</div>
          <% if current_user %>
            <p class="user-name">
              <%= "ようこそ#{@current_user.name}さん" %>
            </p>
          <% end %>
          <nav>
            <ul>
            <!-- ゲストユーザーとしてログイン時 -->
                <li><a href="#" class="active">Memopyとは</a></li>
                <% if logged_in? %>
                  <li><%= link_to @current_user.name, user_path(@current_user) %></li>
                  <li><%= link_to "人物リスト", friends_path %></li>
                  <li><%= link_to "人物追加", new_friend_path %></li>
                  <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
                <% else %>
                  <li><%= link_to "新規登録", signup_path %></li>
                  <li><%= link_to "ログイン", login_path %></li>
                <% end %>
            <!-- 通常ユーザーとしてログイン時 -->
                <!-- <li><a href="#" class="active">Memopyとは</a></li> -->
                <!-- <li><a href="#" class="active">人物一覧</a></li> -->
                <!-- <li><a href="#" class="active">リスト追加</a></li> -->
                <!-- <li><a href="#" class="active">ログアウト</a></li> -->
            </ul>
          </nav>
        <div class="menu-toggle"><i class="fa fa-bars" aria-hidden="true"></i></div>
      </header>
      <!-- ハンバーガークリックでメニュー表示開始 -->
      <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
      <script type="text/javascript">
        $(document).ready(function(){
          $('.menu-toggle').click(function(){
            $('nav').toggleClass('active')
          });
        })
      </script>
      <!-- ヘッダー終了 -->
      <!-- メイン開始 -->
      <main>
        <%= yield =%>
        <% flash.each do |message_type, message| %>
          <div class="flash-message">
          　<%= message %>
          </div>
        <% end %>
      </main>
      <!-- メイン終了 -->
      <!-- フッター開始 -->
      <footer>
        <nav>
          <ul>
            <!-- ゲストユーザーとしてログイン時 -->
            <li><a href="#">Memopyとは</a></li>
            <% if logged_in? %>
              <li><%= link_to @current_user.name, user_path(@current_user) %></li>
              <li><%= link_to "人物リスト", friends_path %></li>
              <li><%= link_to "人物追加", new_friend_path %></li>
              <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
            <% else %>
              <li><%= link_to "新規登録", signup_path %></li>
              <li><%= link_to "ログイン", login_path %></li>
            <% end %>
            <!-- 通常ユーザーとしてログイン時 -->
            <!-- <li><a href="#" class="active">Memopyとは</a></li> -->
            <!-- <li><a href="#" class="active">人物一覧</a></li> -->
            <!-- <li><a href="#" class="active">リスト追加</a></li> -->
            <!-- <li><a href="#" class="active">ログアウト</a></li> -->
          </ul>
        </nav>
        <span><p>Copyright (C) Memopy, Inc. All Rights Reserved.</p></span>
      </footer>
      <!-- フッター終了 -->
    </div>
  </body>
</html>
